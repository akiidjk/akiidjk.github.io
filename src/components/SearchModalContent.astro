---
import ModalController from '@/components/react/ModalController';
import SearchField from '@/components/react/SearchField';
---

<style>
  .modal-backdrop {
    position: fixed;
    inset: 0;
    background-color: rgba(0, 0, 0, 0.8);
    z-index: 1000;
    display: none;
    align-items: center;
    justify-content: center;
    padding: 1rem;
    backdrop-filter: blur(5px);
  }

  .modal-backdrop.active {
    display: flex;
  }

  .modal-container {
    background-color: var(--background);
    max-width: 640px;
    width: 100%;
    padding: 2rem;
    border-radius: 8px;
    position: relative;
  }

  .pagefind-ui__drawer {
    all: unset;
  }

  .pagefind-ui__result-excerpt,
  .pagefind-ui__result-thumb {
    display: none !important;
  }

  button.close-btn {
    position: absolute;
    top: 0.5rem;
    right: 0.5rem;
    background: none;
    border: none;
    font-size: 1.5rem;
    color: var(--text-muted);
    cursor: pointer;
  }
</style>

<ModalController client:load />
<div id="search-modal" class="modal-backdrop">
  <SearchField client:load />
  <button class="close-btn" aria-label="Close search">&times;</button>
</div>
